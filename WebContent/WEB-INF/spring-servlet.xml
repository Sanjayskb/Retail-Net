<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
	http://www.springframework.org/schema/beans/spring-beans-4.1.xsd  
	http://www.springframework.org/schema/context  
	http://www.springframework.org/schema/context/spring-context-4.1.xsd
	http://www.springframework.org/schema/mvc
   	http://www.springframework.org/schema/mvc/spring-mvc.xsd">

	<context:component-scan base-package="com.retailnet.**" />

	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/pages/" />
		<property name="suffix" value=".jsp" />
	</bean>
	
	

	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://localhost:3306/retail_net" />
		<property name="username" value="root" />
		<property name="password" value="" />
	</bean>


	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">

		<property name="dataSource">
			<ref bean="dataSource" />
		</property>

		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
				<prop key="hibernate.show_sql">false</prop>
				<prop key="hibernate.connection.autocommit">true</prop>
			</props>
		</property>
		<property name="annotatedClasses">
			<list>
				<value>com.retailnet.user.UserType</value>
				<value>com.retailnet.user.User</value>
				<value>com.retailnet.user.Firm</value>
				<value>com.retailnet.user.FirmImageMapping</value>
				<value>com.retailnet.sector.Sector</value>
				<value>com.retailnet.products.Products</value>
				<value>com.retailnet.orders.Order</value>
				<value>com.retailnet.inquiries.Inquiries</value>
				<value>com.retailnet.gst.Gst</value>
				<value>com.retailnet.gst.Unit</value>
				<value>com.retailnet.admin.Help</value>
				<value>com.retailnet.sector.Category</value>
				<value>com.retailnet.products.ProductImage</value>
				<value>com.retailnet.cart.Cart</value>
				<value>com.retailnet.location.Cities</value>
				<value>com.retailnet.location.States</value>
				<value>com.retailnet.utility.Search</value>
			</list>
		</property>
	</bean>
	
	<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
	</bean>

	<mvc:resources mapping="/resources/**" location="/resources/"
		cache-period="31556926" />
	<mvc:resources mapping="/assets/**" location="/pages/assets/"
		cache-period="31556926" />
	<mvc:resources mapping="/adminassets/**" location="/pages/adminview/"
		cache-period="31556926" />
	<mvc:resources mapping="/images/**" location="file:///D:/project 1/images/products/"
		cache-period="31556926" />
	<mvc:resources mapping="/resourceimages/**" location="file:///D:/project 1/images/resources/"
		cache-period="31556926" />
		<mvc:resources mapping="/fimages/**" location="file:///D:/project 1/images/firm/"
		cache-period="31556926" />
	<mvc:annotation-driven />

	<mvc:annotation-driven>
		<mvc:message-converters>
			<bean class="org.springframework.http.converter.StringHttpMessageConverter" />
			<bean
				class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter" />
		</mvc:message-converters>
	</mvc:annotation-driven>

</beans>  
